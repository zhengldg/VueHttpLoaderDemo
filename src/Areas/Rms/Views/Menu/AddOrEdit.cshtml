@{
    var id = ViewContext.RouteData.Values["id"];
    int editFlag = ViewBag.editFlag;
}

<div class="layui-form pd010 @(editFlag == 0 ? "pdb10" : "pdb55")" ng-controller="indexCtrl as vm" ng-cloak>
    <div class="grid-infor">

        <table @(editFlag == 0 ? "form-readonly" : "")>
            <tr>
                <td>
                    <span class="red">*</span>菜单编号
                </td>
                <td>
                    <input type="text" name="CDXH" ng-readonly="vm.isEdit" ng-model="vm.entity.CDXH" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
                <td>
                    <span class="red">*</span>菜单名称
                </td>
                <td>
                    <input type="text" name="CDMC" ng-model="vm.entity.CDMC" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
            </tr>
            <tr>
                <td>
                    <span class="red">*</span>父菜单
                </td>
                <td>
                    <dropdown-list id="FCDXH" url='@Url.Action("GetMenusDropDownList", new { ssxt = Request["SSXT"]})' textField="text" valueField="id" ng-model="vm.entity.FCDXH"></dropdown-list>
                </td>
                <td>
                    菜单名称
                </td>
                <td>
                    <input type="text" name="PYJX" ng-model="vm.entity.PYJX" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
            </tr>
            <tr>
                <td>
                    <span class="red">*</span>链接地址
                </td>
                <td>
                    <input type="text" ng-model="vm.entity.LJDZ" lay-verify="required" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
                <td>
                    图片位置
                </td>
                <td>
                    <input type="text" name="TPWZ" ng-model="vm.entity.TPWZ" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
            </tr>
            <tr>
                <td>
                    链接系统
                </td>
                <td>
                    <input type="text" ng-model="vm.entity.LJXT" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
                <td>
                    图片提示
                </td>
                <td>
                    <input type="text" ng-model="vm.entity.TPTS" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
            </tr>
            <tr>
                <td>
                    <span class="red">*</span>是否有效
                </td>
                <td>
                    <radio-list id="SFYX" @*lay-verify="radio"*@ url="@(Url.Action("GetGgdmz","Tool",new { area="", DMJBH = "SFYX" }))" textField="text" valueField="id" ng-model="vm.entity.SFYX"></radio-list>
                </td>
                <td>
                    <font color="red">*</font>排序号
                </td>
                <td>
                    <input type="text" name="PXH" ng-model="vm.entity.PXH" lay-verify="required|number" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="6">
                </td>
            </tr>

            <tr>
                <td>
                    备注
                </td>
                <td colspan="3">
                    <input type="text" ng-model="vm.entity.BZ" placeholder="请输入" autocomplete="off" class="layui-input" maxlength="50">
                </td>
            </tr>
        </table>
    </div>

    @if (editFlag == 1)
    {
        <div class="foot-btnp">
            <button class="layui-btn layui-btn-sm layui-btn-normal" lay-filter="form1" lay-submit>保存</button>
            <button class="layui-btn   layui-btn-sm layui-btn-primary" onclick="parent.layer.closeAll()">取消</button>
        </div>
    }
</div>

@section script{
    <script>
        var id = '@id';

        angular.module("app.rms")
            .controller("indexCtrl", ["$scope", "pdActionSvr", "pdResourceSvr", function ($scope, pdActionSvr, pdResourceSvr) {
                var addOrEditUrl = '@Url.Action("SaveMenu")';

                var vm = this;
                vm.entity = { };
                vm.filter = { sortfield: 'xh', KEY: '' };

                vm.save = function () {
                    pdResourceSvr.post(addOrEditUrl, vm.entity)
                        .then(function (rsp) {
                            if (rsp.Result) {
                                pdActionSvr.success('保存成功', '提示');
                                vm.isEdit = true;
                            } else {
                                pdActionSvr.error(rsp.message || '保存失败');
                            }
                        });
                }

                vm.init = function () {
                    if (id) {
                        vm.isEdit = true;
                        pdResourceSvr.get('@Url.Action("GetMenu")?id=' + id)
                            .then(function (rsp) {
                                vm.entity = rsp || {};
                            });
                    } else {
                        vm.entity.SSXT = '@Request["SSXT"]';
                        vm.entity.FCDXH = '@Request["FCDXH"]';
                    }
                }

                vm.init();

                //监听提交
                layui.form.on('submit(form1)', function (data) {
                    vm.save();
                });
            }]);
    </script>
}